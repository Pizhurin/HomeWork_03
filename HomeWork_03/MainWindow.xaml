<Window x:Class="HomeWork_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_03"
        mc:Ignorable="d"
        x:Name="Form_Start"
        Title="HomeWork_03" 
        Height="150" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="btn_task01" 
                Content="Task 01" 
                Grid.Column="0" 
                Width="100" 
                Height="30" Click="btn_task01_Click"/>
        <Button x:Name="btn_task02" 
                Content="Task 02" 
                Grid.Column="1" 
                Width="100" 
                Height="30" Click="btn_task02_Click"/>

    </Grid>
    
</Window>
